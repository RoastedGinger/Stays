<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    tools:context="com.handshake.pritz.OrganicHomeStay.Formfilling">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                app:srcCompat="@drawable/checked" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Booking Confirm"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hadr"
                android:layout_width="match_parent"
                android:paddingTop="4dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hpr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hchin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hcout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/hphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/noofpeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <TextView
                android:id="@+id/noofroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aba3a3" />

            <Button
                android:id="@+id/Pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="#FF1BCC0B"
                android:text="Pay"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
